                <Grid Margin="10,563,0,0" Background="#B27D7D7D" HorizontalAlignment="Left" VerticalAlignment="Top" Height="290">
                    <TextBlock x:Name="chanColorCover" TextWrapping="Wrap" Text="Not Yet Implemented"  FontSize="26.667" FontFamily="Stencil" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                </Grid>
            </Grid>
        </ScrollViewer>

        <!-- General Settings Window -->
        <Grid x:Name="gridGeneralSettings" HorizontalAlignment="Left" Height="223" Margin="85.75,10,0,0" VerticalAlignment="Top" Width="325" Grid.ColumnSpan="2" Grid.Column="1">
            <Label x:Name="lblNick" Content="Nickname:" HorizontalAlignment="Left" Margin="21,19,0,0" VerticalAlignment="Top" Foreground="#FFA6A6A6"/>
            <TextBox x:Name="txtNick" HorizontalAlignment="Left" Height="23" Margin="93,22,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <Label x:Name="lblName" Content="Username:" HorizontalAlignment="Left" Margin="21,178,0,0" VerticalAlignment="Top" Foreground="#FFA6A6A6"/>
            <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="23" Margin="93,181,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <Label x:Name="lblAltNick" Content="Alternate:" HorizontalAlignment="Left" Margin="26,147,0,0" VerticalAlignment="Top" Foreground="#FFA6A6A6"/>
            <TextBox x:Name="txtAltNick" HorizontalAlignment="Left" Height="23" Margin="93,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <CheckBox x:Name="chkPassword" Content="Password Authentication" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top" Foreground="#FFA6A6A6" FontSize="10" Checked="passCheck" Unchecked="passCheck"/>
            <GridSplitter HorizontalAlignment="Left" Height="1  " Margin="5 ,58,0,0" VerticalAlignment="Top" Width="310"/>
            <GridSplitter HorizontalAlignment="Left" Height="1  " Margin="5,141,0,0" VerticalAlignment="Top" Width="310"/>
            <Label x:Name="lblPassword" Content="Password:" HorizontalAlignment="Left" Margin="26,79,0,0" VerticalAlignment="Top" Foreground="#FF505050" IsEnabled="False" IsHitTestVisible="False" FontStyle="Italic"/>
            <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="93,82,0,0" VerticalAlignment="Top" Width="120" Height="23" IsEnabled="False"/>
            <Label x:Name="lblAuthNick" Content="Identify To:" HorizontalAlignment="Left" Margin="20,110,0,0" VerticalAlignment="Top" Foreground="#FF505050" FontStyle="Italic"/>
            <TextBox x:Name="txtAuthNick" HorizontalAlignment="Left" Height="23" Margin="93,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
            <Image x:Name="imgEyeBall" HorizontalAlignment="Left" Height="23" Margin="218,82,0,0" VerticalAlignment="Top" Width="25" Source="Icons/421-201.png" MouseDown="showPass" ForceCursor="True" Cursor="Hand">
                <Image.OpacityMask>
                    <ImageBrush Stretch="UniformToFill" ImageSource="Icons/421-201.png"/>
                </Image.OpacityMask>
            </Image>

        </Grid>

        <!-- Screen Options -->
        <ScrollViewer x:Name="scrollWindowScreen" HorizontalAlignment="Left" Height="223" Margin="87.75,10,0,0" VerticalAlignment="Top" Width="325" CanContentScroll="True" Visibility="Hidden" Grid.ColumnSpan="2" Grid.Column="1">
            <StackPanel x:Name="gridScreenOptions">
                <Label Content="Please select the monitor to dock Pixel IRC" Margin="10,10,10,10" Height="35" VerticalAlignment="Top" Foreground="#FFA6A6A6" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <Grid x:Name="monitorPanel" Margin="10,0,10,10" Width="288" Height="48" />
                <Label Content="Select what position to dock Pixel IRC in." Margin="10,0,10,0" Foreground="#FFA6A6A6" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <RadioButton x:Name="radioDockRight" Margin="0,0,5,0" Grid.Row="0" Grid.Column="1" VerticalContentAlignment="Center" BorderBrush="{x:Null}" Foreground="#FFA6A6A6" Tag="R">Right (default)</RadioButton>
                    <RadioButton x:Name="radioDockLeft" Grid.Row="1" Grid.Column="1" VerticalContentAlignment="Center" BorderBrush="{x:Null}" Foreground="#FFA6A6A6" Tag="L">Left</RadioButton>
                    <RadioButton x:Name="radioDockTop" Margin="0,0,5,0" Grid.Row="0" Grid.Column="2" VerticalContentAlignment="Center" BorderBrush="{x:Null}" Foreground="#FFA6A6A6" Tag="T">Top</RadioButton>
                    <RadioButton x:Name="radioDockBottom" Grid.Row="1" Grid.Column="2" VerticalContentAlignment="Center" BorderBrush="{x:Null}" Foreground="#FFA6A6A6" Tag="B">Bottom</RadioButton>
                </Grid>
                <CheckBox x:Name="chkOnTop" Content="Always on top" Foreground="#FFA6A6A6" Margin="100,10,0,-3" />
            </StackPanel>
        </ScrollViewer>

        <!-- Server Add Popup -->
        <StackPanel x:Name="addServerPanel" HorizontalAlignment="Left" Height="223" Margin="10,10,0,0" VerticalAlignment="Top" Width="438" Background="#E5000000" Visibility="Hidden" Grid.ColumnSpan="3">
            <TextBlock x:Name="siTextHeader" TextWrapping="Wrap" Text="Please enter all required IRC server information here." Foreground="White" TextAlignment="Center" Margin="0" Height="48" Padding="0,15,0,0" Background="#26FFFFFF"/>
            <Grid Height="120" Background="#0CFFFFFF">
                <Label x:Name="lblFriendlyName" Content="Friendly Name:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="93" Foreground="#FFA6A6A6" HorizontalContentAlignment="Right"/>
                <TextBox x:Name="siTxtName" HorizontalAlignment="Left" Height="23" Margin="108,12,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="195" SpellCheck.IsEnabled="True" KeyUp="siNameTestInput"/>
                <Image x:Name="imgNameHelp" HorizontalAlignment="Left" Height="14" Margin="308,16,0,0" VerticalAlignment="Top" Width="14" Source="Icons/568541-200.png" Cursor="Hand"/>
                <Label x:Name="lblIRCServerServer" Content="Server:" Margin="10,41,335,53" HorizontalContentAlignment="Right" Foreground="#FFA6A6A6"/>
                <TextBox x:Name="siTxtServer" HorizontalAlignment="Left" Height="23" Margin="108,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="195" KeyUp="siServerTestInput"/>
                <Image x:Name="imgServerHelp" HorizontalAlignment="Left" Height="14" Margin="308,49,0,0" VerticalAlignment="Top" Width="14" Source="Icons/568541-200.png" Cursor="Hand"/>
                <Label x:Name="lblPortAdd" Content="Port:" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top" Width="93" Foreground="#FFA6A6A6" HorizontalContentAlignment="Right"/>
                <TextBox x:Name="siTxtPort" HorizontalAlignment="Left" Height="22" Margin="108,76,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="78" KeyUp="siPortTestInput"/>
                <Image x:Name="imgPortHelp" HorizontalAlignment="Left" Height="14" Margin="191,80,0,0" VerticalAlignment="Top" Width="14" Source="Icons/568541-200.png" Cursor="Hand"/>
            </Grid>
            <Grid Height="55" Background="#26FFFFFF">
                <Button x:Name="siBtnOK" Content="OK" HorizontalAlignment="Left" Margin="125,15,0,0" VerticalAlignment="Top" Width="75" Click="siOK_Clicked"/>
                <Button x:Name="siBtnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="257,15,0,0" VerticalAlignment="Top" Width="75" Click="siCancelClicked"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
